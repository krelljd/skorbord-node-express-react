@devHost = http://localhost:3000/api/cards
@prodHost = https://skorbord.app/api/cards
@host = {{devHost}}

### List all games
GET {{host}}/abc123/games
Accept: application/json

### Create a new game
POST {{host}}/abc123/games
Content-Type: application/json
{
  "name": "Test Game",
  "game_type": "Hearts",
  "target_score": 100,
  "notes": "Friendly match"
}

### Get game details
GET {{host}}/abc123/games/1
Accept: application/json

### Update game
PUT {{host}}/abc123/games/1
Content-Type: application/json
{
  "name": "Updated Game Name",
  "is_active": true
}

### Delete a game
DELETE {{host}}/abc123/games/1

### List players in a game
GET {{host}}/abc123/games/1/players
Accept: application/json

### Add a player to a game
POST {{host}}/abc123/games/1/players
Content-Type: application/json
{
  "name": "Alice",
  "avatar": "avatar1.png",
  "color": "#FF0000",
  "position": 1
}

### Update player
PUT {{host}}/abc123/players/1
Content-Type: application/json
{
  "name": "Alice Updated",
  "color": "#00FF00"
}

### Remove a player
DELETE {{host}}/abc123/players/1

### List rounds for a game
GET {{host}}/abc123/games/1/rounds
Accept: application/json

### Add a new round
POST {{host}}/abc123/games/1/rounds
Content-Type: application/json
{
  "round_number": 1
}

### Get scores for a round
GET {{host}}/abc123/rounds/1/scores
Accept: application/json

### Add or update scores for a round
POST {{host}}/abc123/rounds/1/scores
Content-Type: application/json
{
  "scores": [
    { "player_id": 1, "score": 10 },
    { "player_id": 2, "score": 5 }
  ]
}

### Edit a score
PUT {{host}}/abc123/scores/1
Content-Type: application/json
{
  "score": 15
}

### Undo/delete a score
DELETE {{host}}/abc123/scores/1

### List rivalry groups
GET {{host}}/abc123/rivalries
Accept: application/json

### Create a rivalry group (multi-player/team)
POST {{host}}/abc123/rivalries
Content-Type: application/json
{
  "name": "Team A vs Team B",
  "notes": "Championship Rivalry",
  "game_type": "Hearts",
  "players": [
    { "player_id": 1, "team_number": 1 },
    { "player_id": 2, "team_number": 1 },
    { "player_id": 3, "team_number": 2 },
    { "player_id": 4, "team_number": 2 }
  ]
}

### Get rivalry group details
GET {{host}}/abc123/rivalries/1
Accept: application/json

### Update rivalry group
PUT {{host}}/abc123/rivalries/1
Content-Type: application/json
{
  "name": "Updated Rivalry Name",
  "notes": "Updated notes"
}

### Remove a rivalry group
DELETE {{host}}/abc123/rivalries/1

### List players in a rivalry group
GET {{host}}/abc123/rivalries/1/players
Accept: application/json

### Add players to a rivalry group
POST {{host}}/abc123/rivalries/1/players
Content-Type: application/json
{
  "players": [
    { "player_id": 5, "team_number": 1 },
    { "player_id": 6, "team_number": 2 }
  ]
}

### Get rivalry group stats
GET {{host}}/abc123/rivalries/1/stats
Accept: application/json

### Get game history
GET {{host}}/abc123/games/1/history
Accept: application/json

### Export game results
GET {{host}}/abc123/games/1/export
Accept: application/json
